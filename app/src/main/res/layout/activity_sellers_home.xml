<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.SellersHomeActivity">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relate1">


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relate1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#C797AF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3">


                <RelativeLayout
                    android:id="@+id/home_seller_relative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/image_home"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/ic_home_black_24dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_home"
                        android:text="Home"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/add_seller_relative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/image_add"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        app:srcCompat="@drawable/ic_add_box" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_add"
                        android:text="Add"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/log_out_seller_relative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/image_logOut"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/ic_input" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image_logOut"
                        android:text="Log Out"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textStyle="bold" />



                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>


</RelativeLayout>