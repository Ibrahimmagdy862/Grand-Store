<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admins.AdminCategoryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Dear Admin"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:id="@+id/welcome_Admin" />


    <Button
        android:id="@+id/maintain_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/welcome_Admin"
        android:text="maintain Products"
        android:background="@drawable/custom_product_btn"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/check_new_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/maintain_btn"
        android:text="Check New Orders"
        android:background="@drawable/custom_product_btn"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/check_and_Approve_new_Products_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/check_new_orders_btn"
        android:text="Check and Approve New Products"
        android:background="@drawable/custom_product_btn"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/log_out_admin_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/custom_product_btn"
        android:text="Log Out"
        android:textColor="@color/colorAccent" />


</RelativeLayout>