<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.SellerAddNewProductActivity">


    <ImageView
        android:id="@+id/select_product_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="23dp"
        android:layout_centerHorizontal="true"
        android:cropToPadding="false"
        android:src="@drawable/select_product_image"
        />


    <EditText
        android:id="@+id/produt_name"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/select_product_img"
        android:padding="20dp"
        android:hint="Product Name"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/edit_background"
        />

    <EditText
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/produt_name"
        android:layout_marginTop="8dp"
        android:padding="20dp"
        android:hint="product description"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/edit_background"
        />

    <EditText
        android:id="@+id/product_Price"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/product_description"
        android:layout_marginTop="8dp"
        android:padding="20dp"
        android:hint="product Price"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/edit_background"
        />

    <Button
        android:id="@+id/add_Product_btn"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/product_Price"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:text="Add product"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/custom_product_btn"
        />


</RelativeLayout>